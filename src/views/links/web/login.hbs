<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/css/session.css">
    <!--this is the style of the new navbar, not delete--->
    {{>web/filesOldWeb/styles}}
</head>

<body>

    <section class="body-session">
        <div class="container p-4">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card">
                        <div class="card-body">
                            <form action="/fud/login" method="POST">
                                <center>
                                    <h1 class="title-session">Login</h1>
                                </center>
                                <br>
                                <div class="form-group">
                                    <lable>
                                        <i class="fi-session fi-rr-user">E-mail *</i>
                                        <input type="text" id="userName" name="userName" placeholder="E-mail"
                                            class="form-control" autofocus>
                                    </lable>
                                </div>

                                <div class="form-group">
                                    <lable>
                                        <i class="fi-session fi-rr-lock">Passwoard *</i>
                                        <input type="password" id="password" name="password" placeholder="password"
                                            class="form-control">
                                    </lable>
                                </div>
                                <button class="btn btn-success btn-block">Login</button>
                                <br><br>
                                <center><a class="link-session" href="/fud/restart-password">Forgot your password?</a></center>
                                <br><br><br>
                                <label class="link-session">Don't have an account?</label><a class="link-singUp"
                                    href="/fud/signup">Sing Up</a>
                                <br><br>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>



