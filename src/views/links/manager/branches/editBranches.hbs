<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/addUser/addUser.css">
</head>
<body>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        {{#each branch}} 
                        <form action="/fud/{{id}}/{{id_companies}}/edit-branch" method="POST" enctype="multipart/form-data">      
                                <br>
                                <center><label><i class="fi-icon fi-sr-store-alt"></i>Edit the branch '{{name_branch}}'</label></center>      
                                <hr>
                                <div class="form-group">
                                    <label>Name Branch *</label><br>
                                    <input type="tex" class="form-control" name="name" placeholder="Name Branch"  maxlength="60" value="{{name_branch}}" required>
                                </div>
                                <div class="form-group">
                                    <label>Alias *</label><br>
                                    <input type="tex" class="form-control" name="alias" placeholder="Alias"  maxlength="50" value="{{alias}}"  required>
                                </div>
                                <div class="form-group">
                                    <label>Representative *</label><br>
                                    <input type="tex" class="form-control" name="representative" placeholder="Representative"  value="{{representative}}" maxlength="100" required>
                                </div>
                                <table>
                                    <th>
                                        <td>
                                            <div class="form-group">
                                                <label>Phone</label><br>
                                                <input type="tex" class="form-control" name="phone" placeholder="Phone"  value="{{phone}}" maxlength="16">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-group">
                                                <label>Cell Phone</label><br>
                                                <input type="tex" class="form-control" name="cell_phone" placeholder="Cell Phone"  value="{{cell_phone}}" maxlength="16">
                                            </div>
                                        </td>
                                    </th>
                                </table>
                                <div class="form-group">
                                    <label>E-mail *</label><br>
                                    <input type="email" class="form-control" name="email" placeholder="E-mail"  maxlength="100" value="{{email_branch}}" required>
                                </div>
                            {{/each}} 

                            <div class="form-group">
                                <label>Country *</label><br>
                                {{#each branch}} 
                                <select id="country" class="form-control" name="country" value="{{id_country}}">
                                {{/each}}
                                    {{#each country}}
                                        <option value="{{id}}">{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>

                            {{#each branch}} 
                                <div class="form-group">
                                    <label>Municipality *</label><br>
                                    <input type="tex" class="form-control" name="municipality"  placeholder="Municipality" value="{{municipality}}" required>
                                </div>
                                <div class="form-group">
                                    <label>City *</label><br>
                                    <input type="tex" class="form-control" name="city" placeholder="City" value="{{city}}" required>
                                </div>
                                <div class="form-group">
                                    <label>Cologne *</label><br>
                                    <input type="tex" class="form-control" name="cologne" placeholder="Cologne" value="{{cologne}}" required>
                                </div>
                                <div class="form-group">
                                    <label>Address *</label><br>
                                    <input type="tex" class="form-control" name="street" placeholder="Address"  maxlength="30" value="{{address}}" required>
                                </div>
                                <div class="form-group">
                                    <label>Outer Numbers</label><br>
                                    <input type="tex" class="form-control" name="num_o" placeholder="Outer Number"  maxlength="5" value="{{num_ext}}">
                                </div>
                                <div class="form-group">
                                    <label>Interior Number</label><br>
                                    <input type="tex" class="form-control" name="num_i" placeholder="Interior Number"  maxlength="5" value="{{num_int}}">
                                </div>
                                <div class="form-group">
                                    <label>Postal Code *</label><br>
                                    <input type="tex" class="form-control" name="postal_code" placeholder="Interior Number"  pattern="[0-9]{5}" value="{{postal_code}}" required>
                                </div>
                            {{/each}} 

                            <div class="form-group">
                                <button class="btn btn-success btn-block">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/js/manager/addEmployee.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" type="text/javascript"></script>
    <script src="js/chosen.jquery.js" type="text/javascript"></script>
    <script type="text/javascript">
    $(document).ready(function(){
        $(".chosen-select").chosen({no_results_text:'No hay resultados para '});
    });
    </script>

  <script>
    //this script upload select
    var mySelect = document.getElementById("country");

    // get the value that i need 
    var valueNeed = mySelect.getAttribute("value");

    for (var i = 0; i < mySelect.options.length; i++) {
      if (mySelect.options[i].value == valueNeed) {
        mySelect.options[i].selected = true;
        break;  
      }
    }
  </script>
</body>
</html>