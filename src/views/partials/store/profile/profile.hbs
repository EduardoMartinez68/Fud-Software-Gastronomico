<style>
    .fi-app {
        font-size: 50px;
    }

    .app-icon {
        font-size: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100px;
        width: 100px;
        border: 1px solid #ddd;
        border-radius: 10px;
        margin: 10px auto;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        background: #F62144;
        box-shadow: 0 0px 8px rgba(0, 0, 0, 0.2);
    }

    .app-icon:hover {
        transform: scale(1.1);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

    .app-name {
        margin-top: 10px;
        text-align: center;
        color: rgba(0, 0, 0, 0.5);
    }

    .img-icon{
        width: 70%;
    }
</style>
<br><br>
