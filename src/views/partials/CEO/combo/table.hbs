<div class="form-group">
    <h6>Insumos y productos</h6><br>
    {{>CEO/combo/browser}}
    <table class="table table-hover" id="table-supplies-products" name="table-combo"> <!--table-bordered-->
        <colgroup>
            <col style="width: 30%;">
            <col style="width: 30%;">
            <col style="width: 15%;">
            <col style="width: 15%;">
            <col style="width: 10%;">
        </colgroup>
        <thead>
        <tr>
            <th><label>Barcode</label></th>
            <th><label>Nombre</label></th>
            <th><label>Cant.</label></th>
            <th><label>Merma.</label></th>
            <th><label>Unidad</label></th>
            <th><label></label></th>
        </tr>
        </thead>
        <tbody>
            {{#each suppliesCombo}}
                <tr id="{{id_products_and_supplies}}">
                    <td><label>{{product_barcode}}</label></td>
                    <td><label>{{product_name}}</label></td>
                    <td><button class="btn" onclick="edit_cant(this)" type="button">{{amount}}</button></td>
                    <td><button class="btn" onclick="edit_food_waste(this)" type="button">{{food_waste}}</button></td>
                    <td>
                        <select class="form-control" value="{{unity}}">
                            {{>unity/unitOfMeasure}}
                        </select>
                    </td>
                    <td><button class="btn btn-danger" onclick="delete_row(this)" type="button"><i class="fi-icon fi-sr-trash"></i></button></td>
                </tr>
            {{/each}}
